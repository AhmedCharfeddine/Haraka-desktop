<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Haraka.Views.SuggestionPopup"
    Width="200"
    Height="60"
    CanResize="False"
    SystemDecorations="None"
    TransparencyLevelHint="AcrylicBlur, Blur, Transparent"
    Background="Transparent"
    Topmost="True"
    WindowStartupLocation="Manual">

	<Border Background="Red" CornerRadius="16" BorderBrush="Black" BorderThickness="2">
		<TextBlock x:Name="SuggestionTextBlock"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="16"
                   Margin="8"
                   TextWrapping="Wrap"
				   Text="default"
				   />
	</Border>
</Window>