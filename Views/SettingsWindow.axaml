<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="https://github.com/avaloniaui"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="Haraka.Views.SettingsWindow"
        Width="400" Height="200"
        Title="Haraka Settings"
        WindowStartupLocation="CenterScreen">

	<StackPanel Margin="20" Spacing="12">

		<!-- Shortcut Text Input -->
		<StackPanel Orientation="Horizontal" Spacing="8">
			<TextBlock Text="Shortcut:" VerticalAlignment="Center" Width="120"/>
			<TextBox Text="{Binding Shortcut}" Width="200"/>
		</StackPanel>

		<!-- Launch on startup -->
		<StackPanel Orientation="Horizontal" Spacing="8">
			<TextBlock Text="Launch on Startup:" VerticalAlignment="Center" Width="120"/>
			<CheckBox IsChecked="{Binding LaunchOnStartup}"/>
		</StackPanel>

		<!-- Buttons -->
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
			<Button Content="Save" Width="80" Click="Save_Click"/>
			<Button Content="Cancel" Width="80" Click="Cancel_Click"/>
		</StackPanel>

	</StackPanel>
</Window>
